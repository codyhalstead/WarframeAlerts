<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/alertRewardContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4">

        <TextView
            android:id="@+id/alertRewardTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:text="Detonite"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            />

        <TextView
            android:id="@+id/alertTimerTextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:gravity="right|bottom"
            android:text="h:00 m:05"
            android:textSize="20sp"
            android:layout_weight="3"
            android:textColor="@color/timerGreen"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/alertLvlTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alertRewardContainer"
        android:text="56-67"
        android:textColor="@color/lightGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/alertFactionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/alertRewardContainer"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:text="grineer"
        android:textColor="@color/lightGrey"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/alertMissionTypeTextBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/alertFactionTextView"
        android:layout_marginBottom="10dp"
        android:text="exterminate"
        android:textColor="@color/lightGrey"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/alertCreditsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/alertLvlTextView"
        android:text="5600 credits"
        android:textColor="@color/lightGrey"

        android:textSize="15sp" />


    <TextView
        android:id="@+id/alertLocationTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/alertCreditsTextView"
        android:text=""
        android:textColor="@color/lightGrey"
        android:textSize="15sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:background="@color/White"
        android:id="@+id/alertDivider"
        />
</RelativeLayout>