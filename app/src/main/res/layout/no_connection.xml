<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black">

    <ImageView
        android:id="@+id/noConnectionLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/warframenamelogo" />

    <TextView
        android:id="@+id/noConnectionTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/noConnectionLogo"
        android:layout_centerHorizontal="true"
        android:text="@string/no_internet_connection"
        android:textColor="@color/White"
        android:textSize="30sp" />


    <Button
        android:id="@+id/noConnectionRefreshBtn"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/noConnectionTextView"
        android:text="@string/refresh_app"
        android:onClick="NoConnRefresh"
        />

</RelativeLayout>